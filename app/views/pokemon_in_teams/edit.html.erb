<h1>Edit pokemon_in_team</h1>
<%= form_with model: @pokemon_in_team do |form| %>
  <div>
    <%= form.label :unique_pokemon_id %>
    <%= form.collection_select(:unique_pokemon_id, UniquePokemon.where(trainer_id: current_user.current_trainer_id).all, :id, :nickname, prompt: true) %>
    <% current_user.errors.full_messages_for(:unique_pokemon_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end%>