<body>
<%= link_to "New Unique Pokemon", new_unique_pokemon_path %>
<%= link_to "Instant Unique Pokemon", instant_pokemon_path(:unique_pokemon => {:nickname => nil, :nature => "", :shiny => ""}) %>
<h1> Your Pokemon </h1>

<% index = Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons.length - 1 %>
  <ul>
    <% while index >= 0%>
        <div class="row">
          <% double = 0 %>
          <% while double < 2 && index >= 0%>
            <div class="col-sm-5">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.name%> <%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].nickname != "" ? "(#{Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].nickname})" : "" %></h5>
                  <p class="card=text"><a href="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.url%>"> <img src="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.icon %>"> </a> </p>
                  <p class="card=text"><img src="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.first_type_image%>"> <img src="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.second_type_image%>"> #<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.national_dex_num %></p>
                  <p><b>Level: </b> <%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level %> </p>
                  <p class="card=text"><b> Abilities: </b> <%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.abilities%> </p>
                  <div class="row">  
                      <div class="col-sm-3" style="text-align:right;">
                        HP: <b> <%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].hp.to_i%> </b>
                      </div>
                      <div class="col-sm-9">
                        <img src="https://htmlcolorcodes.com/assets/images/colors/bright-orange-color-solid-background-1920x1080.png" class="hp_iv_bar" display="inline" width="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].hp_iv * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10"><img src="https://upload.wikimedia.org/wikipedia/commons/8/84/Flag_of_Libya_%281977%E2%80%932011%2C_2-3%29.svg" class="hp_base_bar" display="inline" width="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.hp.to_i * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10"><img src="https://htmlcolorcodes.com/assets/images/colors/baby-blue-color-solid-background-1920x1080.png" class="hp_ev_bar" display="inline" width="<%= (Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].hp_ev/4) * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10">
                      </div>

                      <%# (@unique_pokemon.hp_iv * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level)) %>
                  </div>
                  <div class="row">   
                      <div class="col-sm-3" style="text-align:right;">
                        Atk: <b> <%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.atk.to_i + Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].atk_iv + Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].atk_ev/4%> </b> 
                      </div>
                      <div class="col-sm-9">
                        <img src="https://htmlcolorcodes.com/assets/images/colors/bright-orange-color-solid-background-1920x1080.png" class="atk_iv_bar" display="inline" width="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].atk_iv * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10"><img src="https://upload.wikimedia.org/wikipedia/commons/8/84/Flag_of_Libya_%281977%E2%80%932011%2C_2-3%29.svg" class="atk_base_bar" display="inline" width="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.atk.to_i * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10"><img src="https://htmlcolorcodes.com/assets/images/colors/baby-blue-color-solid-background-1920x1080.png" class="atk_ev_bar" display="inline" width="<%= (Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].atk_ev/4) * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10">
                      </div>
                  </div>

                  <div class="row">  
                      <div class="col-sm-3" style="text-align:right;">
                        Def: <b> <%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.defe.to_i + Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].defe_iv + Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].defe_ev/4%> </b>
                      </div>
                      <div class="col-sm-9">
                        <img src="https://htmlcolorcodes.com/assets/images/colors/bright-orange-color-solid-background-1920x1080.png" class="defe_iv_bar" display="inline" width="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].defe_iv * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10"><img src="https://upload.wikimedia.org/wikipedia/commons/8/84/Flag_of_Libya_%281977%E2%80%932011%2C_2-3%29.svg" class="defe_base_bar" display="inline" width="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.defe.to_i * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10"><img src="https://htmlcolorcodes.com/assets/images/colors/baby-blue-color-solid-background-1920x1080.png" class="defe_ev_bar" display="inline" width="<%= (Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].defe_ev/4) * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10">
                      </div>
                  </div>

                  <div class="row">  
                      <div class="col-sm-3" style="text-align:right;">
                        SpA: <b> <%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.spa.to_i + Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].spa_iv + Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].spa_ev/4%> </b>
                      </div>
                      <div class="col-sm-9">
                        <img src="https://htmlcolorcodes.com/assets/images/colors/bright-orange-color-solid-background-1920x1080.png" class="spa_iv_bar" display="inline" width="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].spa_iv * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10"><img src="https://upload.wikimedia.org/wikipedia/commons/8/84/Flag_of_Libya_%281977%E2%80%932011%2C_2-3%29.svg" class="spa_base_bar" display="inline" width="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.spa.to_i * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10"><img src="https://htmlcolorcodes.com/assets/images/colors/baby-blue-color-solid-background-1920x1080.png" class="spa_ev_bar" display="inline" width="<%= (Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].spa_ev/4) * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10">
                      </div>
                  </div>

                  <div class="row">  
                      <div class="col-sm-3" style="text-align:right;">
                        SpD: <b> <%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.spd.to_i + Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].spd_iv + Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].spd_ev/4%> </b>
                      </div>
                      <div class="col-sm-9">
                        <img src="https://htmlcolorcodes.com/assets/images/colors/bright-orange-color-solid-background-1920x1080.png" class="spd_iv_bar" display="inline" width="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].spd_iv * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10"><img src="https://upload.wikimedia.org/wikipedia/commons/8/84/Flag_of_Libya_%281977%E2%80%932011%2C_2-3%29.svg" class="spd_base_bar" display="inline" width="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.spd.to_i * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10"><img src="https://htmlcolorcodes.com/assets/images/colors/baby-blue-color-solid-background-1920x1080.png" class="spd_ev_bar" display="inline" width="<%= (Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].spd_ev/4) * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10">
                      </div>
                  </div>

                  <div class="row">  
                      <div class="col-sm-3" style="text-align:right;">
                        Spe: <b><%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.spe.to_i + Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].spe_iv + Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].spe_ev/4%> </b>
                      </div>
                      <div class="col-sm-9">
                        <img src="https://htmlcolorcodes.com/assets/images/colors/bright-orange-color-solid-background-1920x1080.png" class="spe_iv_bar" display="inline" width="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].spe_iv * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10"><img src="https://upload.wikimedia.org/wikipedia/commons/8/84/Flag_of_Libya_%281977%E2%80%932011%2C_2-3%29.svg" class="spe_base_bar" display="inline" width="<%= Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].pokemon.spe.to_i * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10"><img src="https://htmlcolorcodes.com/assets/images/colors/baby-blue-color-solid-background-1920x1080.png" class="spe_ev_bar" display="inline" width="<%= (Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].spe_ev/4) * 1/(100/(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index].level))%>" height="10">
                      </div>
                  </div>
                  <p class="card=text"></p>

                  <%= link_to "Go to page", Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index] %> <%= link_to "Destroy unique_pokemon", unique_pokemon_path(Trainer.find_by(id: current_user.current_trainer_id).unique_pokemons[index]), data: {turbo_method: :delete} %>
                </div>
              </div>
            </div>
            <% double += 1%>
            <% index = index - 1%>  
          <% end %>
        </div>
        <p></p>
    <% end %>
  </ul>
</body>