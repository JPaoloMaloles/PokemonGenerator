
<head>
    <title></title>
    <style>
      .base_bar {
          display: inline;
          height: 10px;
      }
    </style>
</head>

<body>
<%= link_to "New Team", new_team_path %>
<%= link_to "New Pokemon In Team", new_pokemon_in_team_path %>

<h1> Your Teams </h1>
<% index = 0 %>
<ul>
  <% while index < current_user.teams.length%>
      <div class="row">
        <% triple = 0 %>
        <% while triple < 3 && index < current_user.teams.length%>
          <div class="col-sm-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"> <%= current_user.teams[index].name%></h5>
                <p class="card=text">
                  <% team_pokemon_index = 0 %>
                  <% while team_pokemon_index < current_user.teams[index].pokemons.length %>
                   <a href="/unique_pokemons/<%= current_user.teams[index].unique_pokemons[team_pokemon_index].id%>"> <img src="<%= current_user.teams[index].pokemons[team_pokemon_index].icon%>"/> </a>
                    <% team_pokemon_index = team_pokemon_index + 1 %>
                  <% end %>
                </p>

              </div>
            </div>
          </div>
          <% triple += 1%>
          <% index += 1%>  
        <% end %>
      </div>
      <p></p>
  <% end %>
  </ul>
</body>